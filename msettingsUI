    private void saveModuleButtonActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        try{

                // archive existing content of "modules.txt" file
                ModuleDatabase md = new ModuleDatabase();
                md.initDatabase("modules.txt");
                String[][] modules = md.getAllModules();

                for( int k=0; k<modules.length; k++ ){
                        String moduleID = modules[k][1];

                        md.deleteModule("module code", moduleID);
                } // archive existing content of "modules.txt" file

                // replace existing "staff.txt" file
                // They will write their dir. here
                File test1 = new File(modulesTextField.getText());

                if(test1.renameTo (new File( "C:\\Game\\Modules.txt")))
                {  
                        //you would have to put: (D:\\afile.txt) to get it work
                        DateFormat dateFormat = new SimpleDateFormat("yyyy/MM/dd HH:mm:ss");
                        Date date = new Date();
                        JOptionPane.showMessageDialog(null, "File has been uploaded successfully." ,
                                        "Form Uploaded", JOptionPane.INFORMATION_MESSAGE);
                        System.out.println(dateFormat.format(date));
                }
                else{
                        JOptionPane.showMessageDialog(null, "Failed to move file. Please try again." ,
                                        "Error", JOptionPane.INFORMATION_MESSAGE);
                }
        }catch (Exception e){
        e.printStackTrace();
        }
        System.out.print( modulesTextField.getText() );
    }                                                

